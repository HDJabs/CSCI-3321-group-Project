@page
@model NewExerciseLog.UI.Pages.Entries.ViewEntriesModel
@{
}

<title>Entries Page</title>
<h1>This is the Entries Page</h1>


<table id="entries-table">

	<tr>
		<th style ="width:12%">Exercise</th>
		<th style="width:12%">hours</th>
		<th style="width:12%">minutes</th>
		<th style="width:12%">date</th>
	</tr>
	@foreach(var obj in Model.Entries)
	{
		<tr>
			<td>@obj.ExerciseName</td>
			<td>@obj.HoursExercised</td>
			<td>@obj.MinutesExercised</td>
			<td>@obj.EntryDate</td>
		</tr>
	}
</table>


<a class="btn btn-primary"  asp-route-id=@Model.ID asp-page="/Users/HomePage"> Go Home</a>

<script>
    function addLogToTable(log) {
        const table = document.getElementById("logTable");
        let row = table.insertRow();

        let dateTime = row.insertCell(0);
        dateTime.innerHTML = log.Date;

        let exercise = row.insertCell(1);
        exercise.innerHTML = log.Exercise;

        let Durration = row.insertCell(2);
        Durration.innerHTML = log.Durration;
    }

