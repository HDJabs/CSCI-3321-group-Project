@page
@model NewExerciseLog.UI.Pages.ExerciseGoals.UpdateExerciseGoalModel
@{
}

<title>Exercise-Time Goals Page</title>

<h1>This is the Exercise-Time Goals Page.</h1>

<form method="post">
	<table>
		<tr>
			<td>
				<input class="form-check-input" id="running-Checkbox" type="checkbox" id="autoSizingCheck2">
				<label class="form-check-label" for="running-Checkbox">Running</label>
			</td>
			<td>
				<label for="running-hours">Hours:</label>
				<input type="number" id="running-hours" min="0" max="20" />
			</td>
			<td>
				<label for="running-minutes">Minutes:</label>
				<input type="number" id="running-minutes" min="0" max="59" />
			</td>
		</tr>

		<tr>
			<td>
				<input class="form-check-input" id="walking-Checkbox" type="checkbox" id="autoSizingCheck2">
				<label class="form-check-label" for="walking-Checkbox">Walking</label>
			</td>
			<td>
				<label for="walking-hours">Hours:</label>
				<input type="number" id="walking-hours" min="0" max="20" />
			</td>
			<td>
				<label for="walking-minutes">Minutes:</label>
				<input type="number" id="walking-minutes" min="0" max="59" />
			</td>
		</tr>

		<tr>
			<td>
				<input class="form-check-input" id="biking-Checkbox" type="checkbox" id="autoSizingCheck2">
				<label class="form-check-label" for="biking-Checkbox">Biking</label>
			</td>
			<td>
				<label for="biking-hours">Hours:</label>
				<input type="number" id="biking-hours" min="0" max="20" />
			</td>
			<td>
				<label for="biking-minutes">Minutes:</label>
				<input type="number" id="biking-minutes" min="0" max="59" />
			</td>
		</tr>

		<tr>
			<td>
				<input class="form-check-input" id="skateboard-Checkbox" type="checkbox" id="autoSizingCheck2">
				<label class="form-check-label" for="skateboard-Checkbox">Skateboarding</label>
			</td>
			<td>
				<label for="skateboarding-hours">Hours:</label>
				<input type="number" id="skateboarding-hours" min="0" max="20" />
			</td>
			<td>
				<label for="skateboarding-minutes">Minutes:</label>
				<input type="number" id="skateboarding-minutes" min="0" max="59" />
			</td>
		</tr>
	</table>

	
	<button type="submit" class="btn btn-primary" onclick="return validateInput()">Update!</button>

	<a href="/Users/HomePage" class="btn btn-link">back home</a>

</form>

